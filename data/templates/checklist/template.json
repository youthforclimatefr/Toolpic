{
  "name": "Checklist",
  "root": "https://toolpic.fridaysforfuture.de/sharepic/templates/checklist/template.json",
  "preview": "data/templates/checklist/preview.jpg",
  "type": "jpg",
  "documents": [
    {
      "width": 1200,
      "height": 1200,
      "src": "data/templates/checklist/1200x1200.svg",
      "alias": "Facebook, Instagram"
    },
    {
      "width": 1200,
      "height": 675,
      "src": "data/templates/checklist/1200x675.svg",
      "alias": "Twitter"
    }
  ],
  "fonts": [
    {
      "name": "Jost-300",
      "src": "fonts/Jost/Jost-300-Light.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Jost-700",
      "src": "fonts/Jost/Jost-700-Bold.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Jost-500",
      "src": "fonts/Jost/Jost-500-Medium.ttf",
      "mime": "font/truetype"
    }
  ],
  "fields": [
    {
      "type": "Selection",
      "description": "Background",
      "key": "backgroundImage",
      "default": {
        "data": "data/templates/checklist/bg.jpg"
      },
      "properties": {
        "items": [
          {
            "type": "file"
          }
        ]
      }
    },

    {
      "type": "Line",
      "description": "Title",
      "key": "title",
      "default": "DEMO-CHECKLIST",
      "properties": {

      }
    },
    {
      "type": "Text",
      "description": "Liste",
      "key": "list",
      "default": ["Schild basteln", "Werbung machen", "Trillerpfeife", "Gute Stimmung & Freunde"],
      "properties": {

      }
    },
    {
      "type": "Line",
      "description": "Date",
      "key": "date",
      "default": "05.07 | 10.14 UHR",
      "properties": {

      }
    },
    {
      "type": "Line",
      "description": "Location",
      "key": "location",
      "default": "HAUPTBAHNHOF, MAINZ",
      "properties": {

      }
    },
    {
      "type": "Line",
      "description": "Instagram Account",
      "key": "instagramacc",
      "default": "@fridaysforfuturemainz",
      "properties": {

      }
    },
    {
      "type": "Line",
      "description": "Facebook Account",
      "key": "facebookacc",
      "default": "/FridaysForFutureMainz",
      "properties": {

      }
    },
    {
      "type": "Line",
      "description": "Twitter Account",
      "key": "twitteracc",
      "default": "@F4F_Mainz",
      "properties": {

      }
    },
    {
      "type": "Selection",
      "description": "Logo",
      "key": "logo",
      "default": "data/resources/logo-2.svg",
      "properties": {
        "mime": "image/png",
        "width": 200,
        "height": 200,
        "items": [
          {
            "type": "value",
            "value": "data/resources/logo-2.svg"
          },
          {
            "type": "file"
          }
        ]
      }
    }
  ]
}
