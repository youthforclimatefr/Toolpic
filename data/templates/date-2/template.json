{
  "name": "Date 2",
  "root": "https://toolpic.fridaysforfuture.de/sharepic/templates/date-2/template.json",
  "preview": "data/templates/date-2/preview.jpg",
  "type": "jpg",
  "documents": [
    {
      "width": 1200,
      "height": 1200,
      "src": "data/templates/date-2/1200x1200.svg",
      "alias": "Facebook, Instagram"
    },
    {
      "width": 1200,
      "height": 675,
      "src": "data/templates/date-2/1200x675.svg",
      "alias": "Twitter"
    }
  ],
  "fonts": [
    {
      "name": "Jost",
      "src": "fonts/Jost/Jost-600-Semi.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Jost-400",
      "src": "fonts/Jost/Jost-400-Book.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Jost-300",
      "src": "fonts/Jost/Jost-300-Light.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Jost-700",
      "src": "fonts/Jost/Jost-700-Bold.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Jost-500",
      "src": "fonts/Jost/Jost-500-Medium.ttf",
      "mime": "font/truetype"
    }
  ],
  "fields": [
    {
      "type": "Selection",
      "description": "Background",
      "key": "backgroundImage",
      "default": {
        "data": "data/templates/date-2/bg.jpg"
      },
      "properties": {
        "items": [
          {
            "type": "file"
          }
        ]
      }
    },
    {
      "type": "Number",
      "description": "Position",
      "key": "pos",
      "default": 0,
      "properties": {
        "value": 0,
        "max": 1,
        "min": -1,
        "step": 0.05,
        "kind": "slider"
      }
    },
    {
      "type": "Checklist",
      "description": "Optionen",
      "key": "options",
      "default": [true, false],
      "properties": {
        "fields": [
          "Ort & Datum",
          "Verdunkelt"
        ]
      }
    },
    {
      "type": "Line",
      "description": "Date",
      "key": "date",
      "default": "5. Juli",
      "properties": {

      }
    },
    {
      "type": "Line",
      "description": "Time",
      "key": "time",
      "default": "10 Uhr",
      "properties": {

      }
    },
    {
      "type": "Line",
      "description": "Location",
      "key": "location",
      "default": "Bahnhofsplatz",
      "properties": {

      }
    },
    {
      "type": "Line",
      "description": "Location detail",
      "key": "locationdetail",
      "default": "Mainz",
      "properties": {

      }
    },
    {
      "type": "Line",
      "description": "Subtitle",
      "key": "subtitle",
      "default": "Ideen tanken beim",
      "properties": {

      }
    },
    {
      "type": "Text",
      "description": "Title",
      "key": "title",
      "default": ["SOMMERKONGRESS"],
      "properties": {

      }
    },
    {
      "type": "Selection",
      "description": "Logo",
      "key": "logo",
      "default": "data/resources/logo-2.svg",
      "properties": {
        "mime": "image/png",
        "width": 200,
        "height": 200,
        "items": [
          {
            "type": "value",
            "value": "data/resources/logo.svg"
          },
          {
            "type": "value",
            "value": "data/resources/logo-2.svg"
          },
          {
            "type": "file"
          }
        ]
      }
    }
  ]
}
