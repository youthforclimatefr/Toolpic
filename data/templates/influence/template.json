{
  "name": "Influence",
  "root": "https://toolpic.fridaysforfuture.de/sharepic/templates/influence/template.json",
  "preview": "data/templates/influence/preview.jpg",
  "type": "jpg",
  "documents": [
    {
      "width": 1200,
      "height": 1200,
      "src": "data/templates/influence/1200x1200.svg",
      "alias": "Facebook, Instagram"
    },
    {
      "width": 1200,
      "height": 675,
      "src": "data/templates/influence/1200x675.svg",
      "alias": "Twitter"
    }
  ],
  "fonts": [
    {
      "name": "Jost",
      "src": "fonts/Jost/Jost-600-Semi.ttf",
      "mime": "font/truetype"
    },
    {
      "name": "Jost-500",
      "src": "fonts/Jost/Jost-500-Medium.ttf",
      "mime": "font/truetype"
    }
  ],
  "fields": [
    {
      "type": "Selection",
      "description": "Background",
      "key": "backgroundImage",
      "default": {
        "data": "data/templates/influence/bg.jpg"
      },
      "properties": {
        "items": [
          {
            "type": "file"
          }
        ]
      }
    },
    {
      "type": "Number",
      "description": "Position",
      "key": "pos",
      "default": 0,
      "properties": {
        "value": 0,
        "max": 1,
        "min": -1,
        "step": 0.05,
        "kind": "slider"
      }
    },
    {
      "type": "Text",
      "description": "Title",
      "key": "title",
      "default": ["HANDELT", "EINFACH!", "DANKE!"],
      "properties": {

      }
    },
    {
      "type": "Line",
      "description": "Subtitle",
      "key": "subtitle",
      "default": "#wirstreikenbisihrhandelt",
      "properties": {

      }
    },
    {
      "type": "Selection",
      "description": "Logo",
      "key": "logo",
      "default": "data/resources/logo.svg",
      "properties": {
        "mime": "image/png",
        "width": 200,
        "height": 200,
        "items": [
          {
            "type": "value",
            "value": "data/resources/logo.svg"
          },
          {
            "type": "value",
            "value": "data/resources/logo-2.svg"
          },
          {
            "type": "file"
          }
        ]
      }
    }
  ]
}
